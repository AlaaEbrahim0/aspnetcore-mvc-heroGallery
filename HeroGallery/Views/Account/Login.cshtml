@model LoginViewModel

@{
	ViewBag.Title = "User Login";
	var returnUrl = Context.Request.Query["ReturnUrl"];
}

<style>
	button
	{
		width: auto;
	}
</style>


<div class="row">
	<div class="col-md-6 offset-md-3">
		<h3 class="mt-2 mb-2 text-white">Login</h3>
		<hr />
		<form method="post" enctype="multipart/form-data" asp-controller="Account" asp-action="Login" asp-route-returnUrl = "@returnUrl">
			<div class="form-group">
				<label class="form-label" asp-for="Email"></label>
				<input class="form-control" asp-for="Email" />
				<span asp-validation-for="Email" class="text-danger"></span>
			</div>

			<div class="form-group">
				<label class="form-label" asp-for="Password"></label>
				<input class="form-control" asp-for="Password" />
				<span asp-validation-for="Password" class="text-danger"></span>
			</div>

			<div class="form-group">
				<div class="checkbox">
					<label asp-for="RememberMe">
						<input  asp-for="RememberMe"/>
						@Html.DisplayNameFor(m => m.RememberMe)
					</label>
				</div>
			</div>

			<div asp-validation-summary="All" class="text-danger"></div>

			<button type="submit" class="btn btn-outline-secondary">Login</button>

			<div class="mt-3">
				<a asp-action="ForgotPassword">Forget Password?</a>
			</div>
		</form>


		<div class="d-flex justify-content-center">
			<form method="post" asp-action="ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl">
				<div>
					@foreach (var provider in Model.ExternalLogins)
					{
						<button type="submit" class="btn btn-outline-primary"
								name="provider" value="@provider.Name"
								title="Logging using your @provider.DisplayName account">
							<i class="bi bi-google"></i> @provider.DisplayName
						</button>
					}
				</div>
			</form>
		</div>
	
		
	</div>

</div>


