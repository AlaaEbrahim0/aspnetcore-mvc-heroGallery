@model CreateRoleViewModel

@{
	ViewBag.Title = "Create New Role";
}

<h3 class="mt-2 mb-2">Create New Role</h3>

<form method="post" class="mt-3" enctype="multipart/form-data" asp-controller="Adminstration" asp-action="CreateRole">
	<div asp-validation-summary="All" class="text-danger"></div>

	<div class="form-group">
		<label class="form-label" asp-for="RoleName"></label>
		<input class="form-control" asp-for="RoleName" />
		<span asp-validation-for="RoleName" class="text-danger"></span>
	</div>

	<button type="submit" class="btn btn-primary">Create</button>
</form>