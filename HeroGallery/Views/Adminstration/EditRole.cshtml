@model EditRoleViewModel

@{
	ViewBag.Title = "Edit Role";
}

<h3>Edit Role</h3>

<form method="post" class="mt-3" asp-controller="adminstration" asp-action="EditRole">
	<div class="form-group ">
		<label class="form-label" asp-for="Id"></label>
		<input asp-for="Id" class="form-control" disabled/>
		
	</div>

	<div class="form-group">
		<label class="form-label" asp-for="RoleName"></label>
		<input asp-for="RoleName" class="form-control" />
		<span asp-validation-for="RoleName"></span>
	</div>

	<div asp-validation-summary="All" class="text-danger"></div>

	<div class="form-group">
		<button type="submit" class="btn btn-outline-primary">Update</button>
		<a asp-controller="adminstration" asp-action="RolesList" class="btn btn-danger">Cancel</a>
	</div>


	<div class="card">
		<div class="card-header">
			<h3>Users in this role</h3>
		</div>

		<div class="card-body">
			@if (Model.Users.Any())
			{
				foreach(var user in Model.Users)
				{
					<h5 class="card-title">@user</h5>
				}
			}
			else
			{
				<h5 class="card-title">None at the moment</h5>
			}
		</div>

		<div class="card-footer">
			<a asp-controller="adminstration" asp-action="EditUsersInRole" asp-route-roleId ="@Model.Id" class="btn btn-outline-primary" style="width:auto">Add or Remove Users</a>
		</div>
	</div>
</form>

