@model List<UserRoleViewModel>

@{
	ViewBag.Title = "Add or Remove Users";
	var roleId = ViewBag.roleId;
}

<form method="post" class="mt-3" asp-action="EditUsersInRole" asp-controller="adminstration" asp-route-roleId = "@roleId"> 

	<div class="card">
		<div class="card-header">
			<h3>Add or remove users from this role</h3>
		</div>

		<div class="card-body">
			@for (int i = 0; i < Model.Count; ++i)
			{
				<div class="form-check m-1">
					<input asp-for="@Model[i].UserId" type="hidden" />
					<input asp-for="@Model[i].UserName" type="hidden" />

					<input class="form-check-input" asp-for="@Model[i].IsSelected"/>
					<label class="form-check-label" asp-for="@Model[i].IsSelected">@Model[i].UserName</label>
				</div>	
			} 

		</div>

		<div class="card-footer">
			<button type="submit" class="btn btn-primary" style="width:auto">Update</button>
			<a asp-controller="adminstration" asp-action="EditRole" asp-route-id = "@roleId" class="btn btn-danger">
				Cancel
			</a>
		</div>
	</div>
</form>