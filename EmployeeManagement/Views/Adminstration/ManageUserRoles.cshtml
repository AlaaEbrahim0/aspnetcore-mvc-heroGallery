@model List<UserRolesViewModel>;

@{
	var userId = ViewBag.userId;
	ViewBag.Title = "Manage User Roles";
}

<form method="post" asp-controller="adminstration" asp-action="ManageUserRoles" asp-route-userId = "@userId">
	<div class="card mt-3">

		<div class="card-header">
			<h2>Manage User Roles</h2>
		</div>

		<div class="card-body">
			@if(Model.Any())
			{
				@foreach (var role in Model)
				{
					<div class="form-check">

						<input asp-for="@role.RoleId" type="hidden"/>
						<input asp-for="@role.RoleName" type="hidden" />

						<input class="form-check-input" asp-for="@role.IsSelected">
						<label class="form-check-label" asp-for="@role.IsSelected">
							@role.RoleName
						</label>
					</div>
				}
			}
			else
			{
				
			}
		</div>

		<div class="card-footer">
			<button type="submit" class="btn btn-primary w-auto">Update</button>
			<a asp-controller="adminstration" class="btn btn-primary w-auto" asp-action="EditUser" asp-route-id="@userId">Cancel</a>
		</div>

	</div>
</form>